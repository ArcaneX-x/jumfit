<% content_for :title do %>Profile <%= @user.name %><% end %>
<div class="container text-center">
  <h2><%= @user.name %></h2>
  <p> Email: <%= @user.email %> </p>
  <p>Phone: <%= @user.phone %></p>
  <p>Дружит с нами с: <%= l @user.created_at, format: :long %></p>
  <p><%= link_to 'Edit Profile', edit_user_path %></p>
  <%= image_tag @user.profile.avatar.variant(resize_to_limit: [300, nil]).processed %>
</div>
