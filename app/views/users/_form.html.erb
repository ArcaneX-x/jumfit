<%= form_for @user, html: { multipart: true } do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>
  <div class="mb-3">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Your name' %>
  </div>
  <div class="mb-3">
    <%= f.text_field :email, class: 'form-control', placeholder: 'Your email' %>
  </div>
  <div class="mb-3">
    <%= f.submit "Update", class: "form-button text-center" %>
  </div>
<% end %>



